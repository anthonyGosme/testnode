{
  "components": [
    {
      "type": "header",
      "content": "Recrutement - Dépôt de CV"
    },
    {
      "type": "textfield",
      "key": "nomCandidat", 
      "label": "Nom du candidat",
      "placeholder": "Ex: Jean Dupont",
      "validate": { "required": true }
    },
    {
      "type": "select",
      "key": "poste",
      "label": "Poste visé",
      "data": {
        "values": [
          { "label": "Développeur", "value": "dev" },
          { "label": "Commercial", "value": "sales" }
        ]
      }
    },
    {
      "type": "file",
      "key": "cv",
      "label": "Votre CV (PDF)",
      "storage": "url",
      "url": "{{UPLOAD_URL}}", 
      "fileKey": "file"
    },
    {
      "type": "button",
      "action": "submit",
      "label": "Postuler",
      "theme": "success"
    }
  ]
}